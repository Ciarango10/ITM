@page "/owners/create"
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService

<h3>Crear</h3>

<OwnerForm @ref="ownerForm" Owner="owner" OnValidSubmit="Create" ReturnAction="Return" />

@code {
    private Owner owner = new Owner();
    private OwnerForm ownerForm;



    private async Task Create()
    {


        var responseHttp = await repository.PostAsync("/api/owners", owner);
        if (responseHttp.Error)
        {

            var message = await responseHttp.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message);
            return;


        }

        Return();
        var toast = sweetAlertService.Mixin(new SweetAlertOptions
            {

                Toast = true,
                Position = SweetAlertPosition.BottomEnd,
                ShowConfirmButton = true,
                Timer = 3000




            });


        await toast.FireAsync(icon: SweetAlertIcon.Success, message: "Registro creado con éxito");
    }


    private void Return()
    {




        ownerForm!.FormularioPosteadoConExito = true;
        navigationManager.NavigateTo("/owners");




    }


}
